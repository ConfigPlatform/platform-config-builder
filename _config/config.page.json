{
  "pages": [
    {
      "path": "/invoice",
      "content": [
        {
          "type": "text",
          "value": "Invoices",
          "className": "text-3xl text-gray-900 font-medium"
        },
        {
          "type": "button",
          "text": "Add Invoice",
          "serverHandler": "open_invoice_create_sidepanel"
        },
        {
          "type": "table",
          "id": "invoice_table",
          "select": "invoice_get_all",
          "columns": [
            {
              "name": "ID",
              "content": [
                {
                  "type": "text",
                  "value": "$id",
                  "vars": {
                    "id": "$id"
                  }
                }
              ]
            },
            {
              "name": "Client",
              "content": [
                {
                  "type": "text",
                  "value": "$name",
                  "vars": {
                    "client.lastName": "$name"
                  }
                }
              ]
            },
            {
              "name": "Products",
              "content": [
                {
                  "type": "list",
                  "data": "products",
                  "separator": ", ",
                  "content": [
                    {
                      "type": "text",
                      "value": "$name",
                      "vars": {
                        "name": "$name"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "pagination",
          "select": "invoice_get_all",
          "className": "flex justify-center"
        }
      ]
    },
    {
      "path": "/client",
      "content": [
        {
          "type": "text",
          "value": "Clients",
          "className": "text-3xl text-gray-900 font-medium"
        },
        {
          "type": "row",
          "content": [
            {
              "type": "filter",
              "placeholder": "Enter first name",
              "filterBy": "firstName",
              "select": "client_get_all"
            },
            {
              "type": "filter",
              "placeholder": "Enter last name",
              "filterBy": "lastName",
              "select": "client_get_all"
            },
            {
              "type": "filter",
              "placeholder": "Enter phone",
              "filterBy": "phone",
              "select": "client_get_all"
            },
            {
              "type": "button",
              "text": "Add Client",
              "serverHandler": "open_client_create_sidepanel"
            }
          ]
        },
        {
          "type": "table",
          "id": "client_table",
          "select": "client_get_all",
          "columns": [
            {
              "name": "ID",
              "sortBy": "id",
              "content": [
                {
                  "type": "text",
                  "value": "$id",
                  "vars": {
                    "id": "$id"
                  }
                }
              ]
            },
            {
              "name": "First Name",
              "content": [
                {
                  "type": "text",
                  "value": "$firstName",
                  "vars": {
                    "firstName": "$firstName"
                  }
                }
              ]
            },
            {
              "name": "Last Name",
              "sortBy": "lastName",
              "content": [
                {
                  "type": "text",
                  "value": "$lastName",
                  "vars": {
                    "lastName": "$lastName"
                  }
                }
              ]
            },
            {
              "name": "Phone",
              "sortBy": "phone",
              "content": [
                {
                  "type": "text",
                  "value": "$phone",
                  "vars": {
                    "phone": "$phone"
                  }
                }
              ]
            },
            {
              "name": "Invoices",
              "content": [
                {
                  "type": "list",
                  "data": "invoices",
                  "separator": ", ",
                  "content": [
                    {
                      "type": "text",
                      "value": "$id",
                      "vars": {
                        "id": "$id"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "name": "Controls",
              "content": [
                {
                  "type": "dropdown",
                  "iconRight": "<svg class=\"w-5 h-5\" aria-hidden=\"true\" xmlns=\"http://www.w3.org/2000/svg\" fill=\"currentColor\" viewBox=\"0 0 4 15\">\n<path d=\"M3.5 1.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Zm0 6.041a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Zm0 5.959a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Z\"/>\n</svg>",
                  "action": "click",
                  "content": [
                    {
                      "type": "button",
                      "text": "Edit",
                      "className": "w-full mx-0"
                    },
                    {
                      "type": "button",
                      "data": {
                        "id": "$id"
                      },
                      "serverHandler": "client_delete_one",
                      "text": "Delete",
                      "variant": "danger",
                      "className": "w-full mx-0"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "pagination",
          "select": "client_get_all",
          "className": "flex justify-center"
        }
      ]
    },
    {
      "path": "/product",
      "content": [
        {
          "type": "text",
          "value": "Products",
          "className": "text-3xl text-gray-900 font-medium"
        },
        {
          "type": "button",
          "text": "Add Product",
          "serverHandler": "open_product_create_sidepanel"
        },
        {
          "type": "table",
          "id": "product_table",
          "select": "product_get_all",
          "columns": [
            {
              "name": "ID",
              "content": [
                {
                  "type": "text",
                  "value": "$id",
                  "vars": {
                    "id": "$id"
                  }
                }
              ]
            },
            {
              "name": "Name",
              "content": [
                {
                  "type": "text",
                  "value": "$name",
                  "vars": {
                    "name": "$name"
                  }
                }
              ]
            },
            {
              "name": "Price",
              "content": [
                {
                  "type": "text",
                  "value": "$$price",
                  "vars": {
                    "price": "$price"
                  }
                }
              ]
            },
            {
              "name": "Description",
              "content": [
                {
                  "type": "text",
                  "value": "$description",
                  "vars": {
                    "description": "$description"
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "pagination",
          "select": "product_get_all",
          "className": "flex justify-center"
        }
      ]
    }
  ]
}
