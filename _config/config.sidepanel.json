{
  "sidepanels": [
    {
      "id": "create_product",
      "width": "25%",
      "placement": "right",
      "content": [
        {
          "type": "text",
          "value": "Create Product",
          "className": "text-xl text-gray-900 font-medium"
        },
        {
          "type": "col",
          "className": "mt-2",
          "content": [
            {
              "type": "form",
              "fields": [
                {
                  "name": "price",
                  "label": "Price",
                  "type": "number",
                  "required": true,
                  "defaultValue": 100,
                  "className": "w-full"
                },
                {
                  "name": "name",
                  "label": "Name",
                  "type": "text",
                  "required": true,
                  "className": "w-full"
                },
                {
                  "name": "description",
                  "label": "Description",
                  "type": "text",
                  "required": true,
                  "className": "w-full"
                }
              ],
              "actions": [
                {
                  "type": "button",
                  "text": "Submit",
                  "htmlType": "submit",
                  "serverHandler": "product_create_sidepanel_submit",
                  "className": "ms-0"
                },
                {
                  "type": "button",
                  "text": "Cancel",
                  "variant": "secondary",
                  "serverHandler": "close_product_create_sidepanel"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "create_invoice",
      "width": "25%",
      "placement": "right",
      "content": [
        {
          "type": "text",
          "value": "Create Invoice",
          "className": "text-xl text-gray-900 font-medium"
        },
        {
          "type": "col",
          "className": "mt-2",
          "content": [
            {
              "type": "form",
              "fields": [
                {
                  "name": "product",
                  "label": "Product",
                  "type": "text",
                  "required": true,
                  "className": "w-full"
                },
                {
                  "name": "client",
                  "label": "Client",
                  "type": "text",
                  "required": true,
                  "className": "w-full"
                }
              ],
              "actions": [
                {
                  "type": "button",
                  "htmlType": "submit",
                  "text": "Submit",
                  "serverHandler": "invoice_create_sidepanel_submit",
                  "className": "ms-0"
                },
                {
                  "type": "button",
                  "text": "Cancel",
                  "variant": "secondary",
                  "serverHandler": "close_invoice_create_sidepanel"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "create_client",
      "width": "25%",
      "placement": "right",
      "content": [
        {
          "type": "text",
          "value": "Create Client",
          "className": "text-xl text-gray-900 font-medium"
        },
        {
          "type": "col",
          "className": "mt-2",
          "content": [
            {
              "type": "form",
              "fields": [
                {
                  "name": "firstName",
                  "label": "First Name",
                  "type": "text",
                  "required": true
                },
                {
                  "name": "lastName",
                  "label": "Last Name",
                  "type": "text",
                  "required": true
                },
                {
                  "name": "phone",
                  "label": "Phone",
                  "type": "text",
                  "required": true
                }
              ],
              "actions": [
                {
                  "type": "button",
                  "text": "Submit",
                  "htmlType": "submit",
                  "serverHandler": "client_create_sidepanel_submit",
                  "className": "ms-0"
                },
                {
                  "type": "button",
                  "text": "Cancel",
                  "variant": "secondary",
                  "serverHandler": "close_client_create_sidepanel"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
